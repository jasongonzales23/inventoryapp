head
  title Dublin Irish Festival 2014
  meta(name="apple-mobile-web-app-status-bar-style" content="black")
  meta(name="apple-mobile-web-app-capable" content="yes")
  meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")

template(name='home')
  header
    +homeNav
  .container
    .row
      +networkStatus
      +yield

template(name='homeNav')
  button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
    span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar

  nav.collapse.navbar-collapse.navbar.navbar-default
    ul.nav.navbar-nav
      li
        a(href="{{pathFor 'home'}}") Home
      li
        a(href="{{pathFor 'locations'}}") All Locations
      li
        a(href="{{pathFor 'tokenLocations'}}") Token Locations
      li
        a(href="{{pathFor 'boothLocations'}}") Booth Locations
      li
        a(href="{{pathFor 'dashboard'}}") Dashboard
    ul.nav.navbar-nav.navbar-right
      +loginButtons
