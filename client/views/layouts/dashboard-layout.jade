template(name='dashboardLayout')
  head
    title Dublin Irish Festival 2014
  body
    header
      .container
        +dashboardNav
    .container
      .row
        +networkStatus
        +yield

template(name='dashboardNav')
  button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
    span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar

  nav.collapse.navbar-collapse.navbar.navbar-default
    ul.nav.navbar-nav
      li
        a(href="{{pathFor 'home'}}") Home
      li(class="{{ isActiveRoute 'dashboardInventory' }}")
        a(href="{{pathFor 'dashboardInventory'}}") Inventory
      li(class="{{ isActiveRoute 'dashboardOrders' }}")
        a(href="{{pathFor 'dashboardOrders'}}") Orders
      li(class="{{ isActiveRoute 'dashboardNotes' }}")
        a(href="{{pathFor 'dashboardNotes'}}") Notes
      li(class="{{ isActiveRoute 'dashboardVendors' }}")
        a(href="{{pathFor 'dashboardVendors'}}") Vendors
    ul.nav.navbar-nav.navbar-right
      +loginButtons
