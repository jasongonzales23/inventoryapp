template(name='dashboardOrders')
  h1 Dashboard
  table.table.table-striped
    thead
      tr
        th Location
        th Unfilled Orders
        th Oldest Unfilled Order Time
        th Time Since Oldest Unfilled Order
        th Location #
    tbody
      each undeliveredOrders
        tr(class="{{ timeWarning oldestOrder.timestamp 45 }}")
          td
            span.color(class="{{color}}")
            a(href="/locations/{{location}}/order-history") {{locationName}}
          td {{unfilledOrdersCount}}
          td {{ formatDate oldestOrder.timestamp "long" }}
          td {{ timesince oldestOrder.timestamp }}
          td {{locationNumber}}
