template(name='addLocations')
  h1 Location Admin
  .col-md-3
    each locations
      .location
        span.destroy &times;
        a.location-name(href="{{pathFor 'adminLocation'}}") {{number}} {{name}}
          if vendor
            .label.label-default VENDOR

  .col-md-9
    .new-item-box.location-info
      h2 Location Info
      .form-group.col-md-3
        label(for='locationNum') Number
        input#locationNum.form-control(type='text')
      .form-group.col-md-9
        label(for='locationName') Name
        input#locationName.form-control(type='text')
      .form-group.col-md-12
        label(for='locationOrg') Organization
        input#locationOrg.form-control(type='text')
      .form-group.col-md-12.colors
        h5 Colors
        label(class="radio-inline")
          input#defaultColor(type="radio" value="none" name="locationColor" checked="true")
          span None
        label(class="radio-inline")
          input(type="radio" value="green" name="locationColor")
          span.color.green
        label(class="radio-inline")
          input(type="radio" value="blue" name="locationColor")
          span.color.blue
        label(class="radio-inline")
          input(type="radio" value="black" name="locationColor" )
          span.color.black
        label(class="radio-inline")
          input(type="radio" value="white" name="locationColor" )
          span.color.white
        label(class="radio-inline")
          input(type="radio" value="purple" name="locationColor" )
          span.color.purple
        label(class="radio-inline")
          input(type="radio" value="red" name="locationColor" )
          span.color.red
      .form-group.col-md-12
        label
          input(id="viewableByOrder" type="checkbox" checked="{{orderPermission}}")
          | Viewable By Order
      .form-group.col-md-12
        label
          input(id="viewableByInventory" type="checkbox" checked="{{inventoryPermission}}")
          | Viewable By Inventory
      .form-group.col-md-12
        label
          input#locationVendor(type='checkbox')
          | Vendor
      .form-group.col-md-9
        button#locationAdd.btn.btn-primary.btn-lg(type="button") Add Location
