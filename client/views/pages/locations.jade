template(name='locations')
  .col-md-12
    h2 All Locations
    table.table.table-striped
      thead
        tr
          th Location
          th
          th
          th
      tbody
        each locations
          if viewableByRole
            tr
              td
                span.color(class="{{color}}")
                a.location(href="{{pathFor 'location'}}") {{number}} {{name}}
              td
                +if isInRole 'admin, inventory'
                  a(href="{{pathFor 'updateInventory'}}") Update Inventory
              td
                +if isInRole 'admin, order'
                  a(href="{{pathFor 'recordOrder'}}") Record Order
              td
                a(href="{{pathFor 'addNote'}}") Add Note
