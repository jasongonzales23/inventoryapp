template(name='orderHistory')
  .col-md-12
    h2 {{number}} {{name}}
    h3 {{organization}}

    .tableContainer
      table.table.table-striped
        thead.fixedHeader
          tr
            th.col-3 Beverage Offered
            th.col-3 Units Ordered
            th.col-3 Order Sent
        tbody.scrollContent
          each orders
            tr.datetime.order-info(data-id="{{_id}}")
              td(colspan='3')
                b Reported at: {{ formatDate timestamp "long" }}
            tr.reporter
              td(colspan='3')
                b Reported by: {{username}}
            each beverages
              tr.order-beverages
                td.col-3  {{name}}
                td.col-3 {{units}}
                td.col-3
                  +deliveredButton

  +invOrdButtons

template(name='deliveredButton')
  button.btn.btn-primary.order-sent(data-sent="{{sent}}", data-id="{{_id}}") {{sent}}
